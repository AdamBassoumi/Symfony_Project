{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/utilisateur.css') }}">
{% endblock %}

{% block body %}
    <div class="edit-utilisateur-container">
        <h1 class="edit-utilisateur-title">Create New Utilisateur</h1>

        <div class="utilisateur-form-container">
            <form method="post" action="{{ path('app_utilisateur_new') }}" class="utilisateur-form">
                <!-- User's name input -->
                <div class="form-group">
                    <label for="utilisateur_nom">Name</label>
                    <input type="text" id="utilisateur_nom" name="utilisateur[nom]" value="{{ form.nom.vars.value }}" class="form-control" required />
                </div>

                <!-- User's first name input -->
                <div class="form-group">
                    <label for="utilisateur_prenom">First Name</label>
                    <input type="text" id="utilisateur_prenom" name="utilisateur[prenom]" value="{{ form.prenom.vars.value }}" class="form-control" required />
                </div>

                <!-- User's email input -->
                <div class="form-group">
                    <label for="utilisateur_email">Email</label>
                    <input type="email" id="utilisateur_email" name="utilisateur[email]" value="{{ form.email.vars.value }}" class="form-control" required />
                </div>

                <!-- Password input -->
                <div class="form-group">
                    <label for="utilisateur_mdp">Password</label>
                    <input type="password" id="utilisateur_mdp" name="utilisateur[mdp]" value="{{ form.mdp.vars.value }}" class="form-control" required />
                </div>

                <!-- Submit button -->
                <div class="utilisateur-btn-group">
                    <button type="submit" class="utilisateur-submit-btn">
                        <i class="fas fa-save"></i> {{ button_label|default('Save') }}
                    </button>
                            <div class="utilisateur-back-section">
            <a href="{{ path('app_utilisateur_index') }}" class="utilisateur-back-btn">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
                </div>
            </form>
        </div>

{% endblock %}

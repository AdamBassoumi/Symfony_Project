{% block title %}Utilisateur Index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/utilisateur.css') }}">
{% endblock %}

{% block body %}
    <div class="utilisateur-container">
        <h1 class="utilisateur-title">Utilisateur Index</h1>
        <table class="utilisateur-table">
            <thead>
                <tr>
                    <th>Id</th><th>Nom</th><th>PrÃ©nom</th><th>Email</th><th>Mdp</th><th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for utilisateur in utilisateurs %}
                    <tr>
                        <td>{{ utilisateur.id }}</td>
                        <td>{{ utilisateur.nom }}</td>
                        <td>{{ utilisateur.prenom }}</td>

<form method="post" action="{{ path('app_utilisateur_delete', {'id': utilisateur.id}) }}" onsubmit="return confirm('Are you sure you want to delete this utilisateur?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">

    <button type="submit" class="utilisateur-btn utilisateur-delete-btn">
        <i class="fas fa-trash-alt"></i> Delete
    </button>
</form>

{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/commentaire.css') }}">
{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uname</th>
                <th>Text</th>
                <th>Date</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.uname }}</td>
                <td>{{ commentaire.text }}</td>
                <td>{{ commentaire.date }}</td>
                <td>{{ commentaire.note }}</td>
                <td>
                    <a href="{{ path('app_commentaire_delete', {'id': commentaire.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Create a New Shop{% endblock %}

{% block stylesheets %}
    {{ parent() }} <!-- Include global styles from base.html.twig -->
    <link rel="stylesheet" href="{{ asset('assets/styles/shoptype.css') }}"> <!-- Link to custom form styling -->
{% endblock %}

{% block body %}
    <div class="container">
        <h2>Create a New Shop</h2>

        {# Render the form here #}
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.submit) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

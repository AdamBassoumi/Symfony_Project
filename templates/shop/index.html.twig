{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/shop.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="shop-container">
        <h1 class="shop-title">Shop Index</h1>

        <table class="shop-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Creation Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for shop in shops %}
                <tr class="shop-row">
                    <td>{{ shop.id }}</td>
                    <td>{{ shop.nom }}</td>
                    <td>{{ shop.description }}</td>
                    <td>{{ shop.dateCreation|date('Y-m-d') }}</td>
                    <td>
                        <a class="shop-view-link" href="{{ path('shop_show', {'shopId': shop.id}) }}">
                            <i class="fas fa-eye"></i> Visit Shop
                        </a>
                        <a class="shop-link" href="{{ path('app_shop_delete', {'shopId': shop.id}) }}">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr class="shop-row">
                    <td colspan="5">No shops found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

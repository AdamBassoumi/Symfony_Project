{% extends 'base.html.twig' %}

{% block title %}Shop index{% endblock %}

{% block body %}
    <h1>Liste des Shops</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shop in shops %}
            <tr>
                <td>{{ shop.id }}</td>
                <td>{{ shop.nom }}</td>
                <td>{{ shop.description }}</td>
                <td>{{ shop.dateCreation|date('d/m/Y H:i') }}</td>
                <td>
                    <a href="{{ path('app_shop_show', {'id': shop.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_shop_edit', {'id': shop.id}) }}" class="btn btn-warning btn-sm">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center">
        <a href="{{ path('app_shop_new') }}" class="btn btn-primary">Créer un nouveau shop</a>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}  <!-- Include styles from base.html.twig -->
    <link rel="stylesheet" href="{{ asset('assets/styles/auth.css') }}">  <!-- Homepage specific CSS -->
{% endblock %}

{% block body %}
    <div class="auth-container">
        <h2>Connexion</h2>

        <form action="{{ path('login_check') }}" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="_username" placeholder="Entrez votre email" required autofocus>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" placeholder="Entrez votre mot de passe" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn">Se connecter</button>
        </form>

        <p>Pas encore de compte? <a href="{{ path('signup') }}">S'inscrire</a></p>
    </div>
{% endblock %}

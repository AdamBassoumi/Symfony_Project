{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}  <!-- Include styles from base.html.twig -->
    <link rel="stylesheet" href="{{ asset('assets/styles/auth.css') }}">  <!-- Homepage specific CSS -->
{% endblock %}

{% block body %}
    <div class="auth-container">
        <h2>S'inscrire</h2>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, { 'attr': { 'placeholder': 'Entrez votre nom' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.prenom) }}
                {{ form_widget(form.prenom, { 'attr': { 'placeholder': 'Entrez votre prénom' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, { 'attr': { 'placeholder': 'Entrez votre email' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.mdp) }}
                {{ form_widget(form.mdp, { 'attr': { 'placeholder': 'Entrez un mot de passe' } }) }}
            </div>
            <button type="submit" class="btn">S'inscrire</button>
        {{ form_end(form) }}

        <p>Vous avez déjà un compte? <a href="{{ path('login') }}">Se connecter</a></p>
    </div>
{% endblock %}

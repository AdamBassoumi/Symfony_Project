{% extends 'base.html.twig' %}

{% block body %}
    <div class="category-container">
        <h1 class="category-title">Categories</h1>

        <div class="category-table-wrapper">
            <table class="category-table">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.name }}</td>
                            <td>
                                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="category-btn">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form action="{{ path('app_category_delete', {'id': category.id}) }}" method="POST" style="display:inline;">
                                    <button type="submit" class="category-delete-btn">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2">No categories available</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_category_new') }}" class="category-create-btn">
            <i class="fas fa-plus"></i> Create New
        </a>
        <a href="{{ path('home') }}" class="category-back-btn">
            <i class="fas fa-arrow-left"></i> Back to Home
        </a>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/category.css') }}">
{% endblock %}

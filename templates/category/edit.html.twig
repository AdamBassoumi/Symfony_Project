{% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    <div class="category-container">
        <h1 class="category-title">Edit Category</h1>

        <form action="{{ path('app_category_edit', {'id': category.id}) }}" method="POST" class="category-form">
            <div class="form-group">
                <label for="name">Category Name</label>
                <input type="text" name="name" id="name" class="category-form-input" value="{{ category.name }}" required />
            </div>

            <button type="submit" class="category-submit-btn">
                <i class="fas fa-save"></i> Save Changes
            </button>
        </form>

        <a href="{{ path('app_category_index') }}" class="category-back-btn">
            <i class="fas fa-arrow-left"></i> Back to Categories
        </a>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/category.css') }}">
{% endblock %}

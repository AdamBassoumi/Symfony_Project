{% extends 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
    <div class="category-container">
        <h1 class="category-title">Category: {{ category.name }}</h1>

        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="category-btn">Edit Category</a>

        <form action="{{ path('app_category_delete', {'id': category.id}) }}" method="POST" style="display:inline;">
            <button type="submit" class="category-delete-btn">Delete Category</button>
        </form>

        <a href="{{ path('app_category_index') }}" class="category-back-btn">Back to Categories</a>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/category.css') }}">
{% endblock %}

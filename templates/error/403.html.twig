{# templates/error/403.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Access Denied{% endblock %}

{% block stylesheets %}
    {{ parent() }}  <!-- Include styles from base.html.twig -->
    <link rel="stylesheet" href="{{ asset('assets/styles/errors.css') }}">  <!-- Homepage specific CSS -->
{% endblock %}

{% block body %}
    <div class="container">
        <div class="error-box">
            <i class="fas fa-ban"></i>
            <h1>Access Denied!</h1>
            <p>Uh-oh! It looks like you're trying to enter a VIP area. Only the cool kids (admins) are allowed here.</p>
            <a href="{{ path('home') }}" class="button">Go to Homepage</a>
        </div>
    </div>
{% endblock %}

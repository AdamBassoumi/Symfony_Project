{% extends 'base.html.twig' %}

{% block title %}Create New Produit{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/produit2.css') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="produit-page-wrapper">
        <h1 class="produit-page-title"><i class="fas fa-plus-circle"></i> Create New Produit</h1>

        {# Flash messages display section #}
        {% if app.flashes('error') %}
            <div class="produit-flash-message produit-error">
                {% for message in app.flashes('error') %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endif %}
        {% if app.flashes('success') %}
            <div class="produit-flash-message produit-success">
                {% for message in app.flashes('success') %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endif %}

        {# Product form #}
        <div class="produit-form-card">
            {{ form_start(form, {'enctype': 'multipart/form-data'}) }}
                <div class="produit-form-group">
                    {{ form_row(form.name) }}
                </div>

                <div class="produit-form-group">
                    {{ form_row(form.description) }}
                </div>

                <div class="produit-form-group">
                    {{ form_row(form.prix) }}
                </div>

                <div class="produit-form-group">
                    {{ form_row(form.fichier) }}  {# This is the file upload field #}
                </div>

                <div class="produit-form-group">
                    {{ form_row(form.category) }}
                </div>

                <button type="submit" class="produit-submit-btn">
                    <i class="fas fa-save"></i> Save
                </button>
            {{ form_end(form) }}
        </div>

        <a href="{{ path('app_produit_index') }}" class="produit-back-btn">
            <i class="fas fa-arrow-left"></i> Back to list
        </a>
    </div>
{% endblock %}
